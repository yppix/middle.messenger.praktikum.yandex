:root {
    --black: #212429;
    --total-black: #202020;
    --fatality-black: #121212;
    --text-black: #2E2D2D;
    --dark-grey: 202020;
    --grey: #D9D9D9;
    --white: #FFFFFF;
    --orange: #FFA800;
    --nude: #BAB4A9;
    --error: #FF0000;
    --emerald: #0B606B;
    --green: #0A8300;
}

* {
    font-family: 'Hind Madurai', sans-serif;
}

body{
    margin: 0;
}

.container {
    background-color: var(--total-black);
    min-height: 100vh;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
}